<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4C646B</item>
        <item name="colorPrimaryDark">#4C646B</item>
        <item name="colorAccent">#555555</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@android:color/white</item> <!-- Whatever color you want-->
    </style>

</resources>
