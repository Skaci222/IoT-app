<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.myproject.ui.activities.HomeActivity">



   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:id="@+id/ivConnected"
       android:layout_margin="15dp"
       android:layout_alignParentRight="true"
       android:src="@drawable/ic_error"/>

   <TextView
       android:id="@+id/tvDeviceName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="15dp"
       android:text="Device Name"
       android:textSize="20sp"/>

   <TextView
       android:id="@+id/tvTemp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ivConnected"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="100dp"
       android:text="Temperature"
       android:textSize="45sp"
       android:textStyle="bold" />

   <TextView
       android:id="@+id/tvTempValue"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tvTemp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:text="-------"
       android:textSize="25sp"/>

   <TextView
       android:id="@+id/tvHumidity"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tvTempValue"
       android:layout_marginTop="60dp"
       android:layout_centerHorizontal="true"
       android:textSize="45sp"
       android:textStyle="bold"
       android:text="Humidity"/>

   <TextView
       android:id="@+id/tvHumidityValue"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tvHumidity"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:textSize="25sp"
       android:text="------"/>

   <TextView
      android:id="@+id/tvHowOftenTempIsUpdated"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_margin="20dp"
       android:textSize="16sp" />


</RelativeLayout>